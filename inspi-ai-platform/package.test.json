{
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__.*\\.test\\.(js|ts|tsx)$",
    "test:integration": "jest --testPathPattern=integration.*\\.test\\.(js|ts|tsx)$",
    "test:e2e": "jest --testPathPattern=e2e.*\\.test\\.(js|ts|tsx)$",
    "test:visual": "jest --testPathPattern=visual.*\\.test\\.(js|ts|tsx)$",
    "test:all": "node scripts/run-tests.js",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "test:update-snapshots": "jest --updateSnapshot"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2"
  }
}